<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/styles/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/styles/prism-base16-monokai.dark.css' | url }}">
    <link href="https://fonts.googleapis.com/css2?family=Anonymous+Pro:wght@400;700&display=swap" rel="stylesheet">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <main class="body-wrapper">

      <div class="pre-container">
        <header class="main-header">
          <div class="container">
            <nav class="main-nav">
              <div class="logo">
                <a href="{{ '/' | url }}">
                  <img src="../img/logo.svg" alt="{{ metadata.title }} blog" />
                </a>
              </div>
              {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
              <ul class="nav">
                {%- for entry in collections.all | eleventyNavigation %}
                  <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                  </li>
                {%- endfor %}
              </ul>
            </nav>
          </div>
        </header>
        <section class="{{ templateClass }} content-body">
          {{ content | safe }}
        </section>
        <footer class="main-footer">
          <div class="container">
            <div class="footer">
              <div>
                &copy; adekoyejo akinhanmi 2020
              </div>
              <div class="footer-links">
                <a href="">twitter</a>
                <a href="">github</a>
                <a href="">email</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </main>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
